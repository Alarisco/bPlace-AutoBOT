{
  "env": { "browser": true, "es2021": true },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-implicit-globals": "error",
    "no-alert": "off"
  }
}
