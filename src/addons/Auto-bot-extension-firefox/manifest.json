{
  "manifest_version": 2,
  "name": "WPlace AutoBot Launcher",
  "version": "1.1.2",
  "description": "AutoBot Launcher for Firefox",
  "permissions": [
    "activeTab",
    "https://wplace.live/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://wplace.live/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "WPlace AutoBot Launcher",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "wplace-autobot@alarisco.com",
      "strict_min_version": "79.0",
      "data_collection_permissions": {
        "telemetry": false,
        "studies": false
      }
    }
  }
}