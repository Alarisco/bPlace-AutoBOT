{
  "manifest_version": 2,
  "name": "bPlace AutoBot Launcher",
  "version": "1.1.3",
  "description": "AutoBot Launcher for Firefox - bPlace.org",
  "permissions": [
    "activeTab",
    "https://bplace.org/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://bplace.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "bPlace AutoBot Launcher",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bplace-autobot@alarisco.com",
      "strict_min_version": "79.0"
    }
  }
}