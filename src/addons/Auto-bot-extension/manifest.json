{
  "manifest_version": 3,
  "name": "bPlace AutoBot Launcher",
  "version": "1.1",
  "description": "AutoBot Launcher for Chrome based browsers - bPlace.org",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://bplace.org/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://bplace.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "bPlace AutoBot Launcher",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
